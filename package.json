{
  "name": "youtube-subscriptions-sort-plasmo",
  "displayName": "Sort YouTube subscriptions by watch time",
  "version": "0.0.1",
  "author": "avi12",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build"
  },
  "dependencies": {
    "plasmo": "0.55.0-alpha.0",
    "time-to-seconds": "^1.4.1"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "1.2.2",
    "@types/chrome": "0.0.196",
    "@types/node": "18.7.15",
    "prettier": "2.7.1",
    "typescript": "4.8.2"
  },
  "manifest": {
    "permissions": [
      "tabs"
    ],
    "host_permissions": [
      "https://www.youtube.com/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "https://www.youtube.com/*"
        ],
        "css": [
          "~contents/content.scss"
        ]
      }
    ]
  }
}
